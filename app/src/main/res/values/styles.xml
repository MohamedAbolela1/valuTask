<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SampleArch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="text" parent="@android:style/TextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="editTextTheme" parent="@android:style/TextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:textDirection">locale</item>
    </style>

    <!-- Light -->
    <style name="textLight" parent="text">
        <item name="android:fontFamily">@font/cairo_light</item>
    </style>
    <!--add other custom fonts here for regular font-->
    <style name="textSemiSmallLight" parent="textLight">
        <item name="android:textSize">@dimen/font_semi_small</item>
    </style>

    <style name="textXxSmallLight" parent="textLight">
        <item name="android:textSize">@dimen/font_xx_small</item>
    </style>

    <!-- Regular -->
    <style name="textRegular" parent="text">
        <item name="android:fontFamily">@font/cairo_regular</item>
    </style>

    <!--add other custom fonts here for regular font-->
    <style name="textXSmallRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_x_small</item>
    </style>

    <style name="textSemiSmallRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_semi_small</item>
    </style>

    <style name="textSmallRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="textMediumRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="textSemiMediumRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_semi_medium</item>
    </style>

    <style name="textLargeRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="textxLargeRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_xlarge</item>
    </style>

    <style name="textxxLargeRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_xxlarge</item>
    </style>

    <style name="textxxxLargeRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_xxxlarge</item>
    </style>

    <!-- Medium -->
    <style name="textMedium" parent="text">
        <item name="android:fontFamily">@font/cairo_regular</item>
    </style>
    <!--add other custom fonts here for Medium font-->
    <style name="textSemiSmallMedium" parent="textMedium">
        <item name="android:textSize">@dimen/font_semi_small</item>
    </style>

    <style name="textSmallMedium" parent="textMedium">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="textMediumMedium" parent="textMedium">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="textLargeMedium" parent="textMedium">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="textxLargeMedium" parent="textMedium">
        <item name="android:textSize">@dimen/font_xlarge</item>
    </style>


    <style name="textxxLargeMedium" parent="textMedium">
        <item name="android:textSize">@dimen/font_xxlarge</item>
    </style>

    <style name="textxxxLargeMedium" parent="textMedium">
        <item name="android:textSize">@dimen/font_xxxlarge</item>
    </style>

    <!-- Semi_Bold -->
    <style name="textSemiBold" parent="text">
        <item name="android:fontFamily">@font/cairo_semi_bold</item>
    </style>

    <style name="textSmallSemiBold" parent="textSemiBold">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="textSemiMediumSemiBold" parent="textSemiBold">
        <item name="android:textSize">@dimen/font_semi_medium</item>
    </style>

    <style name="textMediumSemiBold" parent="textSemiBold">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="textXLargeSemiBold" parent="textSemiBold">
        <item name="android:textSize">@dimen/font_xlarge</item>
    </style>
    <!-- Bold -->
    <style name="textXSmallBold" parent="textBold">
        <item name="android:textSize">@dimen/font_x_small</item>
    </style>

    <style name="textBold" parent="text">
        <item name="android:fontFamily">@font/cairo_bold</item>
    </style>

    <style name="textSemiSmallBold" parent="textBold">
        <item name="android:textSize">@dimen/font_semi_small</item>
    </style>

    <style name="textSmallBold" parent="textBold">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="textMediumBold" parent="textBold">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="textXMediumBold" parent="textBold">
        <item name="android:textSize">@dimen/font_xmedium</item>
    </style>

    <style name="textLargeBold" parent="textBold">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="textxLargeBold" parent="textBold">
        <item name="android:textSize">@dimen/font_xlarge</item>
    </style>

    <style name="textxxLargeBold" parent="textBold">
        <item name="android:textSize">@dimen/font_xxlarge</item>
    </style>

    <style name="textxxxLargeBold" parent="textBold">
        <item name="android:textSize">@dimen/font_xxxlarge</item>
    </style>

    <!--add other custom fonts here for Bold font-->
    <style name="toolbarTheme" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- This attributes is used by title -->
        <item name="titleTextAppearance">@style/toolbar_text_appearance</item>
    </style>

    <style name="toolbar_text_appearance">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/cairo_regular</item>
    </style>





</resources>